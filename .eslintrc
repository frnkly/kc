{
  "env": {
    "browser": true,
    "jest": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "jest",
    "jsx-a11y",
    "react",
    "react-hooks"
  ],
  "rules": {
    "func-names": [
      "error",
      "never"
    ],
    "max-len": [
      "warn",
      {
        "code": 100
      }
    ],
    "no-plusplus": [
      "off"
    ],
    "react/destructuring-assignment": [
      "off"
    ],
    "react/sort-comp": [
      "warn",
      {
        "order": [
          "type-annotations",
          "static-methods",
          "lifecycle",
          "everything-else",
          "render"
        ]
      }
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
